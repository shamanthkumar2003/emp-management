@model DashboardViewModel

@{
    ViewData["Title"] = "Work Assignment Dashboard";
}

<h1>Work Assignment Dashboard</h1>

<h2>Employees</h2>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Job Title</th>
    </tr>
    @foreach (var emp in Model.Employees)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.FirstName @emp.LastName</td>
            <td>@emp.Email</td>
            <td>@emp.JobTitle</td>
        </tr>
    }
</table>

<h2>Tasks</h2>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Assigned To</th>
    </tr>
    @foreach (var task in Model.Tasks)
    {
        <tr>
            <td>@task.Id</td>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.Status</td>
            <td>@task.Priority</td>
            <td>@task.AssignedTo</td>
        </tr>
    }
</table>

<h2>Attendance</h2>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Employee ID</th>
        <th>Check-In</th>
        <th>Check-Out</th>
        <th>Status</th>
        <th>Created At</th>
    </tr>
    @foreach (var att in Model.Attendance)
    {
        <tr>
            <td>@att.Id</td>
            <td>@att.EmployeeId</td>
            <td>@att.CheckIn</td>
            <td>@(att.CheckOut.HasValue ? att.CheckOut.Value.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")</td>
            <td>@att.Status</td>
            <td>@att.CreatedAt</td>
        </tr>
    }
</table>
